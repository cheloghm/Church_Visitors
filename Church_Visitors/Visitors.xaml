<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Church_Visitors.ViewModels"
             x:Class="Church_Visitors.Visitors"
             Title="Visitors">

    <ContentPage.BindingContext>
        <viewmodels:VisitorViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Label 
            Text="Welcome to Visitors Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Get All Visitors" Command="{Binding GetAllVisitorsCommand}" />

        <SearchBar Placeholder="Search for visitors" />

        <ListView ItemsSource="{Binding Visitors}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout>
                            <Label Text="{Binding FullName}" />
                            <Button Text="Update" />
                            <Button Text="View" />
                            <Button Text="Delete" />
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
